<odoo>
    <record id="view_hr_shift_tree" model="ir.ui.view">
        <field name="name">hr.shift.tree</field>
        <field name="model">hr.shift</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="shift_type"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_shift_form" model="ir.ui.view">
        <field name="name">hr.shift.form</field>
        <field name="model">hr.shift</field>
        <field name="arch" type="xml">
            <form string="Shift">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="shift_type"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="duration"/>
                        <field name="allow_overlap"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
